@model IEnumerable<products>

<div class="container-fluid">

    <div class="row mt-4 mb-2">        
        <div class="col-md-6">
             <h2>
                   Product Dashboard
            </h2>
        </div>
         <div class="col-md-6 text-end">
            <a asp-area="" asp-controller="Product" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i>Add Product</a>
        </div>
    </div>
    <table class="table table-hover rounded">
        <thead class="table-primary">
            <tr>
               <th>Sl.No</th>
                <th>Title</th>
                <th>Description</th>
                <th>Category</th>
                <th>stock</th>
                <th>Brand</th>
                 <th>Price</th>
                <th>Action</th>
        </thead>
        <tbody>
            @foreach(var productlist in Model.Select((value,index)=>new {index,value}))
            {
              <tr>
                
                <th>@(productlist.index+1)</th>
                <td>@productlist.value.Title</td>
                <td>@productlist.value.Description</td>
                <td>@productlist.value.Category</td>
                <td>@productlist.value.stock</td>
                <td>@productlist.value.brand</td>
                <td>@productlist.value.Price</td>
                <td>
                    <a asp-controller="Product" asp-action="Edit" asp-route-Id="@productlist.value.Id" class="btn btn-sm btn-secondary"><i class="bi bi-pencil-square"></i></a>
                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@productlist.value.Id"   class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></a>
                </td>
           </tr>
            }
           
        </tbody>
    </table>
</div>