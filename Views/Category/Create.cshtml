@model IEnumerable<Category>

<div class="container">


       <partial name="_Notification"/>

    <div class="col-md-6">
        <form method="POST">
            <div asp-validation-summary="All" class="text-danger"></div>
             <div class="form-group">
                <label class="form-group">Name</label>
                <input  class="form-control" id="Name" name="Name">
               </div>
              <div class="form-group">
                <label class="form-group">Order Of Display</label>
                 <input  class="form-control" id="OrderOfDisplay" name="OrderOfDisplay">
              </div>
            
               <div class="mt-2"></div>
            <button type="submit" class="btn btn-primary">Create</button>
            <a class="btn btn-outline-secondary" asp-controller="Category" asp-action="Index">Back to List</a>
            </form>
    </div>
</div>
